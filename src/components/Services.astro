---

<section class="section" id="services">
    <div class="container">
        <header class="section__header reveal">
            <span class="section__badge">What We Offer</span>
            <h2 class="section__title">Our <em>Services</em></h2>
            <div class="section__line"></div>
        </header>

        <div class="services__grid">
            {services.map((service) => (
                <article class="service reveal">
                    <svg class="service__icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <Fragment set:html={service.icon} />
                    </svg>
                    <h3 class="service__title">{service.title}</h3>
                    <p class="service__text">{service.description}</p>
                </article>
            ))}
        </div>
    </div>
</section>

<style>
    .services__grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 2rem;
    }

    .service {
        background: var(--white);
        padding: 2.5rem;
        position: relative;
        transition: all 0.4s var(--ease-out);
        border: 1px solid transparent;
    }

    .service::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 4px;
        height: 0;
        background: var(--gold);
        transition: height 0.4s var(--ease-out);
    }

    .service:hover {
        transform: translateY(-8px);
        box-shadow: var(--shadow-lg);
        border-color: rgba(198, 159, 80, 0.2);
    }

    .service:hover::before {
        height: 100%;
    }

    .service__icon {
        width: 50px;
        height: 50px;
        margin-bottom: 1.5rem;
        color: var(--gold);
    }

    .service__title {
        font-family: var(--font-display);
        font-size: 1.375rem;
        font-weight: 500;
        margin-bottom: 0.75rem;
        color: var(--charcoal);
    }

    .service__text {
        font-size: 0.95rem;
        color: var(--text-muted);
        line-height: 1.7;
    }

    @media (max-width: 1024px) {
        .services__grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (max-width: 768px) {
        .services__grid {
            grid-template-columns: 1fr;
        }
    }
</style>
