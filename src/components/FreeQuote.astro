<section class="section quote-form" id="quote">
    <div class="container">
        <header class="section__header reveal">
            <span class="section__badge">Get Started</span>
            <h2 class="section__title">Free <em>Quote</em></h2>
            <div class="section__line"></div>
            <p class="section__subtitle">
                Have a project in mind? Complete the form below and we'll get back to you with a free estimate.
            </p>
        </header>

        <form class="quote-form__form reveal" id="quoteForm">
            <div class="quote-form__grid">
                <div class="quote-form__field">
                    <label for="fullName" class="quote-form__label">Full Name *</label>
                    <input type="text" id="fullName" name="fullName" class="quote-form__input" placeholder="Your full name" required>
                </div>
                <div class="quote-form__field">
                    <label for="email" class="quote-form__label">Email Address *</label>
                    <input type="email" id="email" name="email" class="quote-form__input" placeholder="Your email address" required>
                </div>
                <div class="quote-form__field">
                    <label for="phone" class="quote-form__label">Phone Number</label>
                    <input type="tel" id="phone" name="phone" class="quote-form__input" placeholder="Your phone number">
                </div>
                <div class="quote-form__field">
                    <label for="subject" class="quote-form__label">Subject *</label>
                    <input type="text" id="subject" name="subject" class="quote-form__input" placeholder="What is this regarding?" required>
                </div>
            </div>
            <div class="quote-form__field quote-form__field--full">
                <label for="message" class="quote-form__label">Your Message</label>
                <textarea id="message" name="message" class="quote-form__textarea" placeholder="Tell us about your project..." rows="5"></textarea>
            </div>
            <button type="submit" class="btn btn--primary quote-form__submit">
                <span>Send Message</span>
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
                </svg>
            </button>
        </form>
    </div>
</section>

<style>
    .quote-form {
        background: var(--cream);
        position: relative;
    }

    .quote-form__form {
        max-width: 800px;
        margin: 4rem auto 0;
        background: var(--white);
        padding: 3rem;
        border-radius: 8px;
        box-shadow: var(--shadow-lg);
    }

    .quote-form__grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .quote-form__field {
        display: flex;
        flex-direction: column;
    }

    .quote-form__field--full {
        margin-bottom: 2rem;
    }

    .quote-form__label {
        font-size: 0.75rem;
        font-weight: 600;
        letter-spacing: 0.1em;
        text-transform: uppercase;
        color: var(--charcoal);
        margin-bottom: 0.5rem;
    }

    .quote-form__input,
    .quote-form__textarea {
        padding: 1rem 1.25rem;
        font-family: var(--font-body);
        font-size: 1rem;
        color: var(--charcoal);
        background: var(--cream);
        border: 2px solid transparent;
        border-radius: 4px;
        transition: all 0.3s ease;
        outline: none;
    }

    .quote-form__input::placeholder,
    .quote-form__textarea::placeholder {
        color: var(--text-light);
    }

    .quote-form__input:focus,
    .quote-form__textarea:focus {
        border-color: var(--gold);
        background: var(--white);
    }

    .quote-form__textarea {
        resize: vertical;
        min-height: 120px;
    }

    .quote-form__submit {
        display: inline-flex;
        align-items: center;
        gap: 0.75rem;
    }

    .quote-form__submit svg {
        width: 20px;
        height: 20px;
        transition: transform 0.3s ease;
    }

    .quote-form__submit:hover svg {
        transform: translateX(5px);
    }

    @media (max-width: 768px) {
        .quote-form__grid {
            grid-template-columns: 1fr;
        }

        .quote-form__form {
            padding: 2rem 1.5rem;
        }
    }
</style>

<script>
    const form = document.getElementById('quoteForm');

    form?.addEventListener('submit', (e) => {
        e.preventDefault();

        // Get form data
        const formData = new FormData(form as HTMLFormElement);
        const data = Object.fromEntries(formData);

        // For now, just show a success message
        // In production, this would send to a backend or email service
        alert('Thank you for your inquiry! We will get back to you shortly.');
        (form as HTMLFormElement).reset();
    });
</script>
